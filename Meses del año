#include <iostream>

using namespace std;

int main() {

    int numero;
    cout << "Digite un numero entre 1 y 12: ";
    cin >> numero;

    switch(numero){
        case 1: cout << "El numero corresponde al mes de Enero"; break;
        case 2: cout << "El numero corresponde al mes de Febrero"; break;
        case 3: cout << "El numero corresponde al mes de Marzo"; break;
        case 4: cout << "El numero corresponde al mes de Abril"; break;
        case 5: cout << "El numero corresponde al mes de Mayo"; break;
        case 6: cout << "El numero corresponde al mes de Junio"; break;
        case 7: cout << "El numero corresponde al mes de Julio"; break;
        case 8: cout << "El numero corresponde al mes de Agosto"; break;
        case 9: cout << "El numero corresponde al mes de Setiembre"; break;
        case 10: cout << "El numero corresponde al mes de Octubre"; break;
        case 11: cout << "El numero corresponde al mes de Noviembre"; break;
        default: cout << "El numero corresponde al mes de Diciembre"; break;
    }
    return 0;
}
