#include <iostream>
#include <conio.h>
using namespace std;

int main() {
    float suma;
    float promedio;
    suma = 0;
    promedio = 0;
    for(int i=0; i<=24; i= i+4){
        int cuadrado = i ;
        cout << cuadrado << endl;
        suma += cuadrado;
        promedio = suma / 6;
    }
    cout << "El resultado de la suma es:  " << suma << endl;
    cout << "La temperatura media del dia es: "<< promedio<< endl;

    getch();
    return 0;
}
